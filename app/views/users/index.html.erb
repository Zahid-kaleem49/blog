<p> All users name and email </p>
<% if flash[:notice] %>
    <%= flash[:notice] %>
        <% end %>


<table>
    <tr>
    <th> Username:</th>
    <th>Email:</th>
    </tr>
    
        <% @users.each do |user|%>
            <tr>
                <td>
                    <%=user.username %>
                </td>
            
            
                <td>
                    <%= user.email %>
                </td>
                <td>
                  <%= link_to "Show user's articles", user_path(user) %>
                </td>
                <td>
                    
                    <%= link_to "Create Article for this user", new_article_path(user_id: user.id ) %>

                </td>
                <% if current_user == user %>
                <td>
                    <%= button_to 'delete user and its articles',user_path(user.id), method: :delete  %>
                </td>
                <% end %>

            </tr>
        <% end %>
</table> 